<%- include("partials/header.ejs") %>

<div class="position-ordered-prod-conatiner">
  <div id="myOrdersText">My Orders</div>

  <% if (orders.length === 0) { %>
    <p>You have no orders yet.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="ordered-prod-conatiner">
        
        <div class="order-icon">
          <img src="/images/frontend_assets/parcel_icon.png" alt="parcel_icon" id="parcel-icon">
        </div>

        <div class="order-items">
          <% order.items.forEach((item, index) => { %>
            <%= item.food.title %> x <%= item.quantity %><%= index < order.items.length - 1 ? ', ' : '' %>
          <% }) %>
        </div>

        <div class="order-amount">$<%= order.totalAmount %></div>
        <div class="order-count">Items: <%= order.items.length %></div>

        <div class="del-status-cont">
          <img src="/images/frontend_assets/dot.png" alt="dot">
          <%= order.status %>
        </div>

      </div>
    <% }) %>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>

<script src="/javascripts/drop_down_menu.js"></script>

</body>
</html>
